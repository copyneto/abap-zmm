    SELECT SINGLE * FROM T685 WHERE
KVEWE = 'A' AND
KAPPL = 'TX' AND
KSCHL = ZTMM_MAP_COND-KSCHL .
    IF SY-SUBRC EQ 0.
      SELECT SINGLE * FROM T685T WHERE
KVEWE = T685-KVEWE AND
KAPPL = T685-KAPPL AND
KSCHL = T685-KSCHL AND
SPRAS = SY-LANGU .
      IF SY-SUBRC EQ 0.
ZVMM_MAP_COND-VTEXT =
T685T-VTEXT .
      ENDIF.
    ENDIF.
<VIM_TOTAL_STRUC> = ZVMM_MAP_COND.
    APPEND TOTAL.
  ENDSELECT.
  SORT TOTAL BY <VIM_XTOTAL_KEY>.
  <STATUS>-ALR_SORTED = 'R'.
*.check dynamic selectoptions (not in DDIC)...........................*
  IF X_HEADER-SELECTION NE SPACE.
    PERFORM CHECK_DYNAMIC_SELECT_OPTIONS.
  ELSEIF X_HEADER-DELMDTFLAG NE SPACE.
    PERFORM BUILD_MAINKEY_TAB.
  ENDIF.
  REFRESH EXTRACT.
ENDFORM.
*---------------------------------------------------------------------*
FORM DB_UPD_ZVMM_MAP_COND .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZVMM_MAP_COND.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZVMM_MAP_COND-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZTMM_MAP_COND WHERE
  GRUPO = ZVMM_MAP_COND-GRUPO AND
  KSCHL = ZVMM_MAP_COND-KSCHL .
    IF SY-SUBRC = 0.
    DELETE ZTMM_MAP_COND .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZTMM_MAP_COND WHERE
  GRUPO = ZVMM_MAP_COND-GRUPO AND
  KSCHL = ZVMM_MAP_COND-KSCHL .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZTMM_MAP_COND.
    ENDIF.
ZTMM_MAP_COND-MANDT =
ZVMM_MAP_COND-MANDT .
ZTMM_MAP_COND-GRUPO =
ZVMM_MAP_COND-GRUPO .
ZTMM_MAP_COND-KSCHL =
ZVMM_MAP_COND-KSCHL .
ZTMM_MAP_COND-METODO =
ZVMM_MAP_COND-METODO .
ZTMM_MAP_COND-CALCULA =
ZVMM_MAP_COND-CALCULA .
    IF SY-SUBRC = 0.
    UPDATE ZTMM_MAP_COND ##WARN_OK.
    ELSE.
    INSERT ZTMM_MAP_COND .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZVMM_MAP_COND-UPD_FLAG,
STATUS_ZVMM_MAP_COND-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
